<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowEventActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toTopOf="@id/event_action_button"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            tools:context="nap.orbital2018.com.tnap.ShowEventActivity">

                <TextView
                    android:id="@+id/show_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/accent"
                    android:textIsSelectable="false"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/show_event_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/accent"
                    android:textIsSelectable="false"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/show_event_venue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/accent"
                    android:textIsSelectable="false"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/show_event_capacity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/accent"
                    android:textIsSelectable="false"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/show_event_registerby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/accent"
                    android:textIsSelectable="false"
                    android:freezesText="true"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/show_event_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/accent"
                    android:textIsSelectable="false"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/show_event_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/accent"
                    android:textIsSelectable="false"
                    android:textSize="25sp"
                    android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/event_action_button"
        style="?android:textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="40dp"
        android:background="@color/primary"
        android:textColor="@color/icons"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold" />

</android.support.constraint.ConstraintLayout>